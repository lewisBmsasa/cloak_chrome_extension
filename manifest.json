{
    "manifest_version": 1,
    "name": "Cloak",
    "version": "1.0",
    "description": "A browser extension that helps you keep your privacy in LLMs.",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page":"options.html",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css", "ui.css"],
        "type": "module"
      }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                 
            ],
            "matches": ["https://chatgpt.com/*"]
       }
    ]
  }